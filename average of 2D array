#include <stdio.h>

int main()
{
    int rows,cols,i,j;
    printf("Enter the number of rows in first array : ");
    scanf("%d", &rows);
    printf("Enter the number of columns in first array : ");
    scanf("%d", &cols);
    int array1[rows][cols];
    int array2[rows][cols];
    printf("Enter the  first 2D array elements:\n");
    for (i=0;i<rows;i++) 
    {
        for (j=0;j<cols;j++)
        {
            printf("Enter element [%d][%d]: ", i, j);
            scanf("%d",&array1[i][j]);
        }
    }
    
    printf("Enter the  second 2D array elements:\n");
    for (i=0;i<rows;i++) 
    {
        for (j=0;j<cols;j++)
        {
            printf("Enter element [%d][%d]: ", i,j);
            scanf("%d",&array2[i][j]);
        }
    }
    printf("Average of two arrays :\n");
    int result[rows][cols];

     for (i=0;i<rows;i++) 
    {
        for (j=0;j<cols;j++)
        {
            result[i][j] = (array1[i][j] + array2[i][j])/2;
        }
    }
    for (i=0;i<rows;i++) 
    {
        for (j=0;j<cols;j++)
        {
            printf("%d\t",result[i][j]);
        }
        printf("\n");
    }
return 0;
}
